<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Shop Item - Start Bootstrap Template</title>

    {% block stylesheets %}
        {% stylesheets
        '@AppBundle/Resources/public/css/loader.css'
        '@AppBundle/Resources/public/css/bootstrap.min.css'
        '@AppBundle/Resources/public/css/style.css'
        '@AppBundle/Resources/public/css/jquery-confirm.css'
        '@AppBundle/Resources/public/css/datepicker.css'
        %}

        <link rel="stylesheet" href="{{ asset_url }}"  />

        {%  endstylesheets %}
    {% endblock %}


</head>

<body>

<div class="loader"></div>


{% include 'navbar.html.twig' %}


<!-- Page Content -->
<div class="container">

    <div class="row">

        <div class="col-md-3">
            <p class="lead">Funkcijos</p>
            <div class="list-group">
                {% if is_granted('ROLE_READERS_ADMIN') %}
                    <a href="#" class="list-group-item">Skaitytoj킬 admino funkcija 1</a>
                    <a href="#" class="list-group-item">Skaitytoj킬 admino funkcija 2</a>
                {% elseif is_granted('ROLE_READER') %}
                    <a href=" {{ path('orders_reader-reservations-list') }}" class="list-group-item">Mano rezervacijos</a>
                    <a href="#" class="list-group-item">Skaitytojo funkcija 2</a>
                {% elseif is_granted('ROLE_EMPLOYEE') %}
                    <a href="#" class="list-group-item">Darbuotojo funkcija 1</a>
                    <a href="#" class="list-group-item">Darbuotojo funkcija 2</a>
                {% elseif is_granted('ROLE_BOOK_ADMIN') %}
                    <a href="#" class="list-group-item">Knyg킬 admino funkcija 1</a>
                    <a href="#" class="list-group-item">Knyg킬 admino funkcija 2</a>
                {% endif %}
                <a href="https://img1.etsystatic.com/043/0/7345444/il_fullxfull.627295397_slwh.jpg" class="list-group-item">Martyno Batai</a>
            </div>
        </div>

        <div class="col-md-9">
            {% if app.session.flashBag.has('success') %}
                <div class="alert alert-success text-center">
                    {% for msg in app.session.flashBag.get('success') %}
                        {{ msg }}
                    {% endfor %}
                </div>
            {% endif %}
            {% if app.session.flashBag.has('error') %}
                {% for msg in app.session.flashBag.get('error') %}
                    <div class="alert alert-warning text-center">
                        {{ msg }}
                    </div>
                {% endfor %}
            {% endif %}

            {% block body %}{% endblock %}

        </div>

    </div>

</div>
<!-- /.container -->

<div class="container">

    <hr>
    {% include 'footer.html.twig' %}
    <!-- Footer -->


</div>
<!-- /.container -->


{% block javascripts %}
  {% javascripts
    '@AppBundle/Resources/public/js/jquery.min.js'
    '@AppBundle/Resources/public/js/bootstrap.min.js'
    '@AppBundle/Resources/public/js/jquery-confirm.js'
    '@AppBundle/Resources/public/js/datepicker.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

</body>

</html>
